#include <stdio.h>
int main() {
    char str[100]; 
    int words = 0, newline = 0, characters = 0; 
    scanf("%[^~]", str);
    int inWord = 0;
    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ') {
            if (inWord) {
                words++;
                inWord = 0;
            }
        } else if (str[i] == '\n') {
            if (inWord) {
                words++;
                inWord = 0;
            }
            newline++;
        } else { 
            characters++;
            inWord = 1;
        }
    }
    if (inWord) {
        words++;
    }
    if (characters > 0 || words > 0) {
        newline++;
    }
    printf("Total number of words : %d\n", words);
    printf("Total number of lines : %d\n", newline);
    printf("Total number of characters : %d\n", characters);
    return 0;
}
